void main() {
    vec4 v = vec4(VertexPosition.xyz, 1.0);
    
    v.x *= size.x;
    v.y *= size.y;
    
    v += vec4(pos.xy, 0.0, 0.0);
    
    if (mode == 0.0) {
        v -= vec4(size.xy, 0.0, 0.0) * 0.5;
    }
            
    gl_Position = pvMatrix * modelMatrix * v;

    vPosition = VertexPosition;
    if (useColors > 0) {
        vColor = VertexColor;
    } else {
        vColor = strokeColor;
    }
    vTexCoord = VertexTexCoord;
    vNormal = VertexNormal;
}